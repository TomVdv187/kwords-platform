generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(cuid())
  email     String  @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PublisherSite {
  id        String  @id @default(cuid())
  siteKey   String  @unique
  domain    String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  keywords  Keyword[]
}

model Keyword {
  id        String @id @default(cuid())
  word      String
  site      PublisherSite @relation(fields: [siteId], references: [id])
  siteId    String
  sponsorships Sponsorship[]
  createdAt DateTime @default(now())
  @@unique([word, siteId])
}

model Campaign {
  id        String @id @default(cuid())
  name      String
  advertiser String
  dailyBudgetCents Int
  spendCents Int @default(0)
  status    CampaignStatus @default(ACTIVE)
  creatives Creative[]
  sponsorships Sponsorship[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum CampaignStatus {
  ACTIVE
  PAUSED
  ENDED
}

model Creative {
  id        String @id @default(cuid())
  campaign  Campaign @relation(fields: [campaignId], references: [id])
  campaignId String
  url       String
  title     String
  description String
  ctaText   String
}

model Sponsorship {
  id        String @id @default(cuid())
  campaign  Campaign @relation(fields: [campaignId], references: [id])
  campaignId String
  keyword   Keyword @relation(fields: [keywordId], references: [id])
  keywordId String
  bidCpmCents Int
  maxCpcCents Int
  dailyCap   Int? // impressions cap
  createdAt DateTime @default(now())
  @@unique([campaignId, keywordId])
}

model Event {
  id        String @id @default(cuid())
  type      EventType
  campaignId String?
  sponsorshipId String?
  siteId    String?
  keywordId String?
  url       String?
  ip        String?
  userAgent String?
  createdAt DateTime @default(now())
}

enum EventType {
  IMPRESSION
  CLICK
  CONVERSION
}

model AdSystem {
  id        String @id @default(cuid())
  name      String
  domain    String
  sellerType String // PUBLISHER, INTERMEDIARY, BOTH
  seatId     String
}
